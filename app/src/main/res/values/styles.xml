<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="NeonText" parent="Widget.AppCompat.TextView">
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">25</item>
        <item name="android:textColor">#002AFF</item>
        <item name="android:textSize">60sp</item>
        <item name="android:shadowColor">#1F43F8</item>
    </style>
    <style name="StyleText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#B6BCDA</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
